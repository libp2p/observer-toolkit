{
  "name": "@nearform/observer-streams-table",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "version": "0.0.1",
  "description": "React component built on libp2p-observer SDK, visualizing libp2p streams in a data table",
  "author": "AlanSl <alan.slater@nearform.com>",
  "homepage": "",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/libp2p-observer.git"
  },
  "scripts": {
    "prepare": "webpack",
    "storybook": "start-storybook -p 9009",
    "test": "CI=true echo \"No tests for placeholder widget 'streams-table'\"",
    "test:watch": "echo \"Skipping 'streams-table'\"",
    "update-snapshots": "npm run test -- -u"
  },
  "peerDependencies": {
    "@nearform/observer-data": "^0.0.1",
    "@nearform/observer-sdk": "^0.0.1",
    "react": "^16.10.2",
    "styled-components": "^4.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@nearform/observer-shell": "^0.0.1",
    "@storybook/react": "^5.2.4",
    "@testing-library/react": "^9.4.0",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.4",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "raw-loader": "^3.1.0",
    "storybook": "^5.1.11"
  },
  "jest": {
    "setupFilesAfterEnv": ["<rootDir>/../../__jest__/setupTest.js"],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/../../__jest__/styleMock.js"
    },
    "transform": {
      "\\.(mock|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../../__jest__/filePaths.js",
      "\\.js$": [ "babel-jest", { "rootMode": "upward" } ]
    }
  }
}
