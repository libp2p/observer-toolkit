{
  "name": "@libp2p-observer/sdk",
  "publishConfig": {
    "registry": "http://localhost:4873/"
  },
  "version": "0.0.1",
  "description": "Core components, utilities and API for building libp2p introspection ui components",
  "author": "AlanSl <alan.slater@nearform.com>",
  "homepage": "",
  "license": "MIT",
  "main": "./build/index.js",
  "module": "./index.js",
  "scripts": {
    "prepare": "webpack",
    "svgr-graphic": "npx @svgr/cli -d theme/graphics ",
    "svgr-icons": "npx @svgr/cli -d theme/icons theme/icons-src",
    "test": "CI=true jest",
    "test:watch": "jest --watch",
    "update-snapshots": "npm run test -- -u"
  },
  "peerDependencies": {
    "@libp2p-observer/data": "^0.0.1",
    "react": "^16.10.2",
    "react-dom": "^16.11.0",
    "styled-components": "^4.4.0"
  },
  "dependencies": {
    "color-hash": "^1.0.3",
    "d3": "^5.12.0",
    "formik": "^1.5.8",
    "lodash.isequal": "^4.5.0",
    "react-resize-detector": "^4.2.1",
    "react-slidedown": "^2.4.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@svgr/cli": "^4.3.3",
    "@testing-library/react": "^9.4.0",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.4",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "raw-loader": "^3.1.0",
    "react-scripts": "^3.2.0",
    "webpack": "4.41.0",
    "webpack-cli": "^3.3.10"
  },
  "jest": {
    "setupFilesAfterEnv": ["<rootDir>/../../__jest__/setupTest.js"],
    "moduleNameMapper": {
      "\\.(mock|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../../__jest__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/../../__jest__/styleMock.js"
    },
    "transform": {
      "\\.js$": [ "babel-jest", { "rootMode": "upward" } ]
    }
  }
}
